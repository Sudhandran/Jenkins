pipeline {
    agent any

    stages {
        stage('Git checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/ValaxyTech/hello-world.git']]])
            }
        }
    stage('Sonar') {
            steps {
                withSonarQubeEnv('sonar-server'){
                sh 'mvn -f /home/ubuntu/.jenkins/workspace/Declarative-pipeline/pom.xml sonar:sonar'
                }            
          }
        }
    
    }
}
