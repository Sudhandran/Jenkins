pipeline {
    agent any

    stages {
        stage('Git checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/jglick/simple-maven-project-with-tests.git']]])
            }
        }
    stage('Sonar') {
            steps {
                withSonarQubeEnv('sonar-server'){
                sh 'export M2_HOME=/opt/apache-maven-3.8.6/bin'
                sh 'mvn -f /home/ubuntu/.jenkins/workspace/Declarative-pipeline/pom.xml sonar:sonar'
                }            
          }
        }
    
    }
}
